<!ELEMENT precioNuevos (#PCDATA)>
<!ELEMENT semanas (inicio,fin)>
<!ELEMENT inicio (#PCDATA)>
<!ELEMENT fin (#PCDATA)>
<!ELEMENT profesores (profesor)>
